<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ee.arti.musicsync">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PlaylistsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PlaylistListActivity"
            android:label="@string/title_playlist_list"
            android:parentActivityName=".PlaylistListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaylistsActivity" />
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".PlaylistListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaylistsActivity" />
        </activity>

    </application>

</manifest>
